<div id="section">
	<div class="container">
		<h1>Fanzone</h1>
		<hr>

	<% @fans.each_with_index do |fan, i| %>
		<div class="col-md-6">
			<%= link_to "#", data: {toggle: "modal", target: "#modal#{i}"} do %>
			<div id="fanzone">
				<ul>
					<li>
						<h2><%= fan.title %></h2>
					</li>
					<li>
						<p><%= fan.content.truncate(100)%></p>
					</li>
				</ul>
			</div>
			<% end %>

<div id="modli">
				<!-- Modal -->
				<div class="modal fade" id="modal<%=i%>" role="dialog">
					<div class="modal-dialog modal-md">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<div class="modal-body">
								<h1 class="izquierdo"><%= fan.title %></h1><br>
								<h2><%=fan.created_at.to_date %></h2>
								<br>
								<div id="boby">
									<!-- body -->
									<br>
									<h4 class="shadow"><%=fan.content.first %></h4>
									<p><%=fan.content %></p> <br>
									<div class="owl-carousel">
										<div><%= image_tag fan.foto4 if fan.foto4 %></div>
										<div><%= image_tag fan.foto5 if fan.foto5 %></div>
										<div><%= image_tag fan.foto6 if fan.foto6 %></div>
									</div>
									<br>
									<a class= "button button_primary" href="<%= fan.link %>">Más información</a>
									<br>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!--  -->

		</div>
	<% end %>
	</div>
</div>










<script>
    $(".owl-carousel").owlCarousel(
  {
    items:1,
    autoHeight:true,
  });
</script>