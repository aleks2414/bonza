<div id="section">
	<div class="container">
		<h1>Mike Bonza Tour</h1>
		<hr>

	<% @tours.each_with_index do |tour, i| %>
		<div class="col-md-10 col-md-offset-1">
			<%= link_to "#", data: {toggle: "modal", target: "#modal#{i}"} do %>
			<div id="fanzone">
				<ul>
					<li>
						<h2><%= tour.title %></h2>
					</li>
					<li> <br>
						<h6><%= tour.lugar %> - <%= tour.fecha %></h6>
					</li>
					<li>
						<p><%= tour.content.truncate(85)%></p>
					</li>
				</ul>
			</div>
			<% end %>

<div id="modli">
				<!-- Modal -->
				<div class="modal fade" id="modal<%=i%>" role="dialog">
					<div class="modal-dialog modal-md">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<div class="modal-body">
								<h1 class="izquierdo"><%= tour.title %></h1>
								<hr>
								<h6><%= tour.lugar %> - <%= tour.fecha %></h6>
								<br>
								<div id="boby">
									<!-- body -->
									<br>
									<h4 class="shadow"><%=tour.content.first %></h4>
									<p><%=tour.content %></p> <br>
									<div class="owl-carousel">
										<div><%= image_tag tour.foto7 if tour.foto7 %></div>
										<div><%= image_tag tour.foto8 if tour.foto8 %></div>
										<div><%= image_tag tour.foto9 if tour.foto9 %></div>
									</div>
									<br>
									<a class= "button button_primary" href="<%= tour.link %>">Más información</a>
									<br>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!--  -->

		</div>
	<% end %>
	</div>
</div>










<script>
    $(".owl-carousel").owlCarousel(
  {
    items:1,
    autoHeight:true,
  });
</script>