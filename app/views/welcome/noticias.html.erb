<div class="newsi">
	<div class="container">
	<div class="row">
		<div class="col-md-6 col-sm-6">
			<div id="banner_1">
				<h1 class="subtitle white">Entérate Antes</h1>
				<h2 class="title white">Lo mejor de Mike Bonza</h2>
			</div>
		</div>
	</div>
	</div>
</div>
<div id="pinta">
</div>


<div id="section">
	<div class="container">
			<h1 class="big_title">Noticias</h1>
			<hr class="left">

		
			<% @news.each_with_index do |news, i| %>
				<div class="col-md-4">
			<div id="noticia">
				<div class="image">
					<%= image_tag news.foto1 %>
				</div>
				<h2><%=news.title %></h2>
				<h4><%=news.created_at.to_date %></h4>
				<br>
				<p><%= news.content.truncate(150)%></p> <br><br>

				<%= link_to "Seguir Leyendo", "#", data: {toggle: "modal", target: "#modal#{i}"}, class: "butra" %>
			</div>

			<div id="modli">
				<!-- Modal -->
				<div class="modal fade" id="modal<%=i%>" role="dialog">
					<div class="modal-dialog modal-md">
						<div class="modal-content">
							<div class="modal-header">
								<button type="button" class="close" data-dismiss="modal">&times;</button>
							</div>
							<div class="modal-body">
								<h1 class="big_title"><%= news.title %></h1>
								<hr class="left">
								<p><%=news.created_at.to_date %></p>

								<br>
								<div id="boby">
									<!-- body -->
									<h4 class="shadow"><%=news.content.first %></h4>
									<p><%=news.content %></p>
									<br>
									<a class= "button button_secondary" href="<%= news.link %>">Más información</a>
									<br>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!--  -->
				</div>
			<% end %>
	</div>
</div>


<script>
    $(".owl-carousel").owlCarousel(
  {
    items:1,
    autoHeight:true,
  });
</script>