<%= render 'welcome/bread' %>

<div class="container">

<%= link_to "Nueva Foto", new_gallery_path, class: "button button_primary" %>

<div id="formario">

<h1>Galería de Fotos</h1>

<br>
<div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Photo10</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>

        <td><%= gallery.photo10 %></td>
        <td><%= link_to 'Ver más', gallery %></td>
        <td><%= link_to 'Editar', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Eliminar', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

</div>
</div>
