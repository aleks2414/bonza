<%= render 'welcome/bread' %>

<div class="container">
<div id="formario">

<h1>Noticias</h1>

<br>

<div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>Link</th>
      <th>Foto1</th>
      <th>Foto2</th>
      <th>Foto3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news.each do |news| %>
      <tr>
        <td><%= news.user %></td>
        <td><%= news.title %></td>
        <td><%= news.content %></td>
        <td><%= news.link %></td>
        <td><%= news.foto1 %></td>
        <td><%= news.foto2 %></td>
        <td><%= news.foto3 %></td>
        <td><%= link_to 'Show', news %></td>
        <td><%= link_to 'Edit', edit_news_path(news) %></td>
        <td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


</div>
</div>