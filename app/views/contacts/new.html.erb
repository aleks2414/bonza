<%= form_for @contact do |f| %>
					<div class="field">
						<%= f.label :nombre %><br>
						<%= f.text_field :name, required:true %>
					</div>

					<div class="row">
					<div class="col-md-6">
					<div class="field">
						<%= f.label :email %><br>
						<%= f.email_field :email, required:true %>
					</div>
					</div>

					<div class="col-md-6">
					<div class="field">
						<%= f.label :telefono %><br>
						<%= f.email_field :phone, required:true %>
					</div>
					</div>
					</div>


					<%= f.text_field :donde, :value => "#{params[:controller]} - #{request.original_url}", class: "hidden" %>

					<div class="field">
						<%= f.label :comentarios %><br>
						<%= f.text_area :comments %>
					</div>

					<div class="hidden">
						<%= f.label :nickname %><br>
						<%= f.text_field :nickname, hint: 'Esto se queda en blanco' %>
					</div>

					<br>
					<div class="but">
